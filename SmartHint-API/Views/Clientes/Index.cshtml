@using SmartHint_API.Models
@model List<Cliente>

<!DOCTYPE html>
<html>
    <head>
        <title>Cadastros de compradores</title>
        <link rel="stylesheet" href="/css/style.css" />
    </head>
    <body>
        <div id="clientes">
            <h2>Cadastros de clientes</h2>
            <section>
                <p>Consulte os seus Clientes cadastrados na sua Loja ou realize o cadastro de novos Clientes.</p>
                <div>
                    <button>Adicionar cliente</button>
                    <button>Filtrar</button>
                    <button>Limpar filtros</button>
                </div>
            </section>
            <table>
                <thead>
                    <tr>
                        <th>Nome/Razão Social</th>
                        <th>E-mail</th>
                        <th>Telefone</th>
                        <th>Data de cadastro</th>
                        <th>Cliente bloqueado</th>
                        <th>Opções</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cliente in Model)
                    {
                        <tr>
                            <td>@cliente.nome</td>
                            <td>@cliente.email</td>
                            <td>@cliente.telefone</td>
                            <td>@cliente.dataCadastro</td>
                        
                            @if (@cliente.bloqueado)
                            {
                                <td>
                                    <input type="checkbox" checked disabled/>
                                </td>
                            }
                            else
                            {
                                <td>
                                    <input type="checkbox" disabled />
                                </td>
                            }

                            <td>
                                <button onclick="editarUser(@cliente.id)">Editar</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </body>
</html>